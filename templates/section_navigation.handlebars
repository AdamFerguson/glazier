<div class='section-navigation'>
{{#if isEditing}}
  <ol>
    {{#each}}
      <li {{bind-attr class="isCurrent:selected"}}>
        <span {{bind-attr class=":icon sectionIcon"}}></span>
        {{input value=name}}
        <span class="icon-x remove-section" {{action "remove" this target=parentController.stateManager bubbles=false}}></span>
      </li>
    {{/each}}
    <li class='add-section' {{action "add" target=stateManager}}>
      Add Section
    </li>
  </ol>

  <button {{action "done" target=stateManager}}>Done</button>
{{else}}
  <ol>
    {{#each}}
      <li {{bind-attr class="isCurrent:selected"}} {{action "navigateToSection" this}}>
        <span {{bind-attr class=":icon sectionIcon"}}></span>
        {{name}}
      </li>
    {{/each}}
  </ol>

  <button {{action "edit" target=stateManager}}>Edit</button>
{{/if}}
</div>

