<div class="block-group">
  <div id="repository-sidebar-block" class="block">
  {{render "repository_sidebar" }}
  </div>
  <div class="panes block-group">
    {{each panes itemViewClass="Glazier.PaneView"}}
    {{#if addingPane}}
      <div>Add a pane: {{addablePanes.length}}</div>

      {{#each addablePaneTypes}}
        <div><a href="" {{action "addPane" this}}>{{manifest.displayName}}</a></div>
      {{/each}}

      {{#if paneTypes.isUpdating}}
        <div>Loading Panes...</div>
      {{/if}}

      <a href="#" {{action "toggleAddingPanes"}}>close</a>
    {{else}}
      {{#if canAddPanes}}
        <a href="#" {{action "toggleAddingPanes"}}>Add a Pane</a>
      {{/if}}
    {{/if}}
  </div>
</div>
